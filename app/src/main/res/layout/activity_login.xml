<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:activity="com.example.chathus.watchmybaby.LoginActivity">


    <RelativeLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="0dp"
        android:layout_height="509dp"

        android:layout_marginTop="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        tools:layout_centerVertical="true">


        <EditText
            android:id="@+id/txtItemPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/txtUserName"
            android:layout_marginBottom="196dp"
            android:ems="10"
            android:includeFontPadding="false"
            android:inputType="numberPassword"
            android:textSize="8pt"
            tools:includeFontPadding="false" />

        <TextView
            android:id="@+id/lblUserName4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/txtItemPassword"
            android:layout_alignStart="@+id/lblUserName"
            android:text="Item Password"
            android:textSize="8pt"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/txtItemNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/txtUserName"
            android:layout_marginTop="201dp"
            android:ems="10"
            android:includeFontPadding="false"
            android:inputType="textPersonName"
            android:text="Item"
            android:textSize="8pt"
            tools:includeFontPadding="false" />

        <TextView
            android:id="@+id/lblUserName3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/txtItemNumber"
            android:layout_alignStart="@+id/lblUserName"
            android:text="Item Number"
            android:textSize="8pt"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/txtUserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="26dp"
            android:layout_marginTop="50dp"
            android:ems="10"
            android:includeFontPadding="false"
            android:inputType="textPersonName"
            android:textSize="8pt"
            tools:includeFontPadding="false" />

        <TextView
            android:id="@+id/lblUserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/txtUserName"
            android:layout_alignBottom="@+id/txtUserName"
            android:layout_alignParentStart="true"
            android:layout_marginStart="27dp"
            android:text="User Name"
            android:textSize="8pt"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/lblPass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/lblUserName"
            android:layout_below="@+id/txtUserName"
            android:layout_marginTop="33dp"
            android:text="Password"
            android:textSize="8pt"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/txtPass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/lblPass"
            android:layout_alignBottom="@+id/lblPass"
            android:layout_alignStart="@+id/txtUserName"
            android:ems="10"
            android:inputType="numberPassword"
            android:textSize="8pt"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnLogin"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="48dp"
            android:background="#00998a"
            android:onClick="Login"
            android:text="Login"
            android:textColor="#ffffff" />

    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
